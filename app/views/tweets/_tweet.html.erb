<div class="mb-3 card card-body">
  <%= tweet.body %>
  <div class="me-4">
    <%= image_tag tweet.account.image, class: "rounded-circle" %>
    <%= link_to "@#{tweet.account.username}", "https://twitter.com/#{tweet.account.username}", target: :_blank %>

    <% if tweet.published? %>
      <%= link_to "View Tweet", "https://twitter.com/#{tweet.account.username}/status/#{tweet.tweet_id}", target: :_blank %>
    <% else %>
      Scheduled for <%= l(tweet.publish_at), format: :short %>
    <% end %>
  </div>
</div>
